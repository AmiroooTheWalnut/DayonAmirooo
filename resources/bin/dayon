#!/bin/sh

DAYON_HOME=$(dirname "$0")/..
JAVA_HOME=$(/usr/libexec/java_home)
JAVA=$JAVA_HOME/bin/java
JAVA_OPTS="-Xms32M -Xmx192M"

CLASSPATH="$DAYON_HOME/lib/dayon.jar:$DAYON_HOME/lib/jetty-continuation-9.4.11.v20180605.jar:$DAYON_HOME/lib/jetty-http-9.4.11.v20180605.jar:$DAYON_HOME/lib/jetty-io-9.4.11.v20180605.jar:$DAYON_HOME/lib/jetty-server-9.4.11.v20180605.jar:$DAYON_HOME/lib/jetty-util-9.4.11.v20180605.jar:$DAYON_HOME/lib/javax.servlet-api-4.0.1.jar"

$JAVA $JAVA_OPTS -cp $CLASSPATH -Ddayon.log=file $2

